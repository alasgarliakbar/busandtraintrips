{
  "extends": "@expo/tsconfig.base", // Base configuration from Expo
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts", // Remove if this doesn't exist
    "expo-env.d.ts",       // Remove if this doesn't exist
    "nativewind-env.d.ts"  // Remove if this doesn't exist
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
